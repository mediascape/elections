{
    "name": "FileName: Multi-device adaptation behaviour descriptor for the multi-device adaptation engine",
    "explicitRules": {
        "name": "explicit",
        "enabled": false,
        "priority": 2,
        "capabilities": ["deviceType"],
        "behaviour": {
            "agents": {
                "agent1": {
                    "deviceType": "computer"
                },
                "agent2": {
                    "deviceType": "computer"
                },
                "agent3": {
                    "deviceType": "mobile"
                },
                "agent4": {
                    "deviceType": "tv"
                }
            },
            "rules": [
                {
                    "conditions": {
                        "exists": [
                            "agent1"
                        ]
                    },
                    "actions": {
                        "agent1": {
                            "view": {
                                "load": true
                            },
                            "map": {
                                "load": false,
                                "volume": 1
                            },
                            "chart": {
                                "load": false
                            }
                        }
                    }
                },
                {
                    "conditions": {
                        "exists": [
                            "agent2"
                        ]
                    },
                    "actions": {
                        "agent2": {
                            "view": {
                                "load": false
                            },
                            "map": {
                                "load": true,
                                "volume": 1
                            },
                            "chart": {
                                "load": false
                            }
                        }
                    }
                },
                {
                    "conditions": {
                        "exists": [
                            "agent1",
                            "agent2"
                        ]
                    },
                    "actions": {
                        "agent1": {
                            "view": {
                                "load": false
                            },
                            "map": {
                                "load": false,
                                "volume": 1
                            },
                            "chart": {
                                "load": true
                            }
                        },
                        "agent2":{
                            "view": {
                                "load": true
                            },
                            "map": {
                                "load": false
                            },
                            "chart": {
                                "load": true
                            }
                        }
                    }
                },
                {
                    "conditions": {
                        "exists": [
                            "agent1",
                            "agent2",
                            "agent3"
                        ]
                    },
                    "actions": {
                        "agent1": {
                            "view": {
                                "load": false
                            },
